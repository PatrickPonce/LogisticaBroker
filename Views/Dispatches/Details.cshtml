@model LogisticaBroker.Models.Dispatch
@using LogisticaBroker.Models.Enums

@{
    ViewData["Title"] = $"Despacho {Model.DispatchNumber}";

    // Lógica visual para Badges (reutilizada para consistencia)
    var statusBadge = Model.Status switch {
        DispatchStatus.Completed => "bg-success",
        DispatchStatus.Released => "bg-info text-dark",
        DispatchStatus.Pending => "bg-secondary",
        DispatchStatus.Customs => "bg-warning text-dark",
        _ => "bg-primary"
    };
    var channelBadge = Model.Channel switch {
        DispatchChannel.Green => "bg-success",
        DispatchChannel.Orange => "bg-warning text-dark",
        DispatchChannel.Red => "bg-danger",
        _ => "bg-secondary"
    };
    // (CRITERIO 3) Lógica de cálculo de deuda
    var costoTotal = Model.Costs?.Sum(c => c.Amount) ?? 0;
    var totalPagado = Model.Payments?.Sum(p => p.Amount) ?? 0;
    var deudaPendiente = costoTotal - totalPagado;
    var estadoDeuda = deudaPendiente <= 0 && costoTotal > 0 ? "Liquidado" : (costoTotal == 0 ? "Sin Costos" : "Pendiente");
    var deudaBadge = deudaPendiente <= 0 && costoTotal > 0 ? "bg-success" : (costoTotal == 0 ? "bg-secondary" : "bg-danger");
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-0">
                <i class="bi bi-box-seam me-2"></i>@Model.DispatchNumber
            </h1>
            <p class="text-muted lead">Detalle del Despacho</p>
        </div>
        <div class="text-end">
            <span class="badge @statusBadge ms-2">@Html.DisplayFor(model => model.Status)</span>
            <span class="badge @channelBadge fs-6">Canal: @Html.DisplayFor(model => model.Channel)</span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100 border-primary border-top border-4">
                <div class="card-header bg-white fw-bold">
                   <i class="bi bi-person-badge me-2"></i>Información del Cliente & BL
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Cliente</dt>
                        <dd class="col-sm-8 fw-bold fs-5 text-dark">@Html.DisplayFor(model => model.Client!.CompanyName)</dd>

                        <dt class="col-sm-4 text-muted">RUC</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Client!.RUC)</dd>

                        <hr class="my-3 text-muted" />

                        <dt class="col-sm-4 text-muted">BL Number</dt>
                        <dd class="col-sm-8 fw-bold">@(Model.BLNumber ?? "---")</dd>

                        <dt class="col-sm-4 text-muted">Llegada Est.</dt>
                        <dd class="col-sm-8">
                             @if (Model.ArrivalDate.HasValue)
                             {
                                 <span class="text-primary fw-bold">
                                     <i class="bi bi-calendar-event me-1"></i>
                                     @Model.ArrivalDate.Value.ToLocalTime().ToString("dd/MM/yyyy")
                                 </span>
                             }
                             else
                             {
                                 <span>---</span>
                             }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100 border-info border-top border-4">
                <div class="card-header bg-white fw-bold">
                    <i class="bi bi-truck me-2"></i>Detalles Logísticos
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Proveedor</dt>
                        <dd class="col-sm-7">@(Model.Supplier ?? "---")</dd>

                        <dt class="col-sm-5 text-muted">Naviera</dt>
                        <dd class="col-sm-7">@(Model.ShippingLine ?? "---")</dd>

                        <dt class="col-sm-5 text-muted">Puerto</dt>
                        <dd class="col-sm-7">@(Model.Port ?? "---")</dd>

                        <dt class="col-sm-5 text-muted">Contenedor</dt>
                        <dd class="col-sm-7 font-monospace bg-light p-1 rounded">@(Model.ContainerNumber ?? "---")</dd>

                        <hr class="my-3 text-muted" />

                        <dt class="col-sm-5 text-muted">Peso (KG)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Weight)</dd>

                        <dt class="col-sm-5 text-muted">Valor (USD)</dt>
                        <dd class="col-sm-7 text-success fw-bold">@Html.DisplayFor(model => model.Value)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card bg-light border-0 mt-2">
        <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
            <div class="text-muted small mb-3 mb-md-0">
                <i class="bi bi-clock-history me-1"></i>
                Creado el: @Model.CreatedAt.ToLocalTime().ToString("g") <br/>
                Actualizado el: @Model.UpdatedAt.ToLocalTime().ToString("g")
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Volver al listado
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4 fw-bold">
                    <i class="bi bi-pencil-square me-1"></i> Editar Despacho
                </a>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-arrow-repeat me-2"></i>Actualizar Seguimiento (Hito)
                </div>
                <div class="card-body">
                    <form asp-action="ChangeStatus" method="post">
                        <input type="hidden" name="dispatchId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label for="newStatus" class="form-label fw-bold">Nuevo Estado</label>
                            <select class="form-select" name="newStatus" asp-items="Html.GetEnumSelectList<DispatchStatus>()" asp-for="Status"></select>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notas del Cambio</label>
                            <textarea class="form-control" name="notes" rows="3" placeholder="Ej: Documentación recibida correctamente..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold d-flex justify-content-between">
                                <span>Vincular Documentos (Opcional)</span>
                                <small class="text-muted fw-normal" style="cursor:pointer" onclick="toggleDocs(this)">[Mostrar/Ocultar]</small>
                            </label>
                            
                            <div id="docsCheckboxes" style="display:none; max-height: 150px; overflow-y: auto;" class="border rounded p-2 bg-light">
                                @if (Model.Documents != null && Model.Documents.Any())
                                {
                                    @foreach (var doc in Model.Documents.OrderByDescending(d => d.UploadedAt))
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="@doc.Id" id="doc_@doc.Id" name="selectedDocs">
                                            <label class="form-check-label small" for="doc_@doc.Id">
                                                <i class="bi bi-file-earmark-text me-1"></i>@doc.FileName
                                                <span class="text-muted">(@doc.DocType)</span>
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <small class="text-muted fst-italic">No hay documentos disponibles para vincular.</small>
                                }
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Registrar Cambio</button>
                        </div>

                        <script>
                            function toggleDocs(el) {
                                var box = document.getElementById('docsCheckboxes');
                                if (box.style.display === 'none') {
                                    box.style.display = 'block';
                                } else {
                                    box.style.display = 'none';
                                }
                            }
                        </script>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-clock-history me-2"></i>Historial de Movimientos
                </div>
                <div class="card-body overflow-auto" style="max-height: 400px;">
                    @if (Model.Timeline != null && Model.Timeline.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var entry in Model.Timeline)
                            {
                                <li class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1 text-primary fw-bold">
                                            @Html.DisplayFor(modelItem => entry.Status)
                                        </h6>
                                        <small class="text-muted">
                                            @entry.ChangedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(entry.Notes))
                                    {
                                        <p class="mb-1 text-dark fst-italic small bg-light p-2 rounded border">
                                            "@entry.Notes"
                                        </p>
                                    }

                                    @if (entry.Documents != null && entry.Documents.Any())
                                    {
                                        <div class="mb-2">
                                            <small class="fw-bold text-secondary"><i class="bi bi-paperclip me-1"></i>Adjuntos:</small>
                                            <ul class="list-unstyled ms-3 mb-0 small">
                                                @foreach(var linkedDoc in entry.Documents)
                                                {
                                                    <li>
                                                        <a asp-controller="Documents" asp-action="Download" asp-route-id="@linkedDoc.Id" class="text-decoration-none">
                                                            <i class="bi bi-file-earmark-arrow-down"></i> @linkedDoc.FileName
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                    <small class="text-muted">
                                        <i class="bi bi-person-fill me-1"></i>
                                        Actualizado por: @(entry.ChangedBy?.FullName ?? "Sistema")
                                    </small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                            No hay movimientos registrados aún.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-secondary border-top border-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-file-earmark-text me-2"></i>Documentos Adjuntos</h5>
                    <button type="button" class="btn btn-sm btn-info me-2" data-bs-toggle="modal" data-bs-target="#notifyClientModal">
                        <i class="bi bi-send-fill me-1"></i> Notificar al Cliente
                    </button>
                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                        <i class="bi bi-cloud-upload me-1"></i> Subir Nuevo
                    </button>
                </div>
                <div class="card-body p-0">
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Nombre Archivo</th>
                                        <th>Fecha Subida</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doc in Model.Documents.OrderByDescending(d => d.UploadedAt))
                                    {
                                        <tr>
                                            <td><span class="badge bg-light text-dark border">@Html.DisplayFor(modelItem => doc.DocType)</span></td>
                                            <td>
                                                <i class="bi bi-paperclip text-muted me-1"></i>
                                                @doc.FileName
                                                @if (!string.IsNullOrEmpty(doc.Notes))
                                                {
                                                    <br /><small class="text-muted fst-italic">Nota: @doc.Notes</small>
                                                }
                                            </td>
                                            <td>@doc.UploadedAt.ToLocalTime().ToString("g")</td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-controller="Documents" asp-action="Preview" asp-route-id="@doc.Id" target="_blank" class="btn btn-outline-primary" title="Previsualizar">
                                                        <i class="bi bi-eye"></i> Ver
                                                    </a>
                                                    <a asp-controller="Documents" asp-action="Download" asp-route-id="@doc.Id" class="btn btn-outline-secondary" title="Descargar">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                </div>
                                                <form asp-controller="Documents" asp-action="Delete" asp-route-id="@doc.Id" method="post" class="d-inline ms-1" onsubmit="return confirm('¿Borrar este documento permanentemente?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-folder2-open fs-1 d-block mb-2"></i>
                            No hay documentos adjuntos a este despacho.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="uploadModalLabel"><i class="bi bi-cloud-upload me-2"></i>Subir Documento</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="Documents" asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="dispatchId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label for="DocType" class="form-label fw-bold">Tipo de Documento</label>
                            <select name="DocType" class="form-select" asp-items="Html.GetEnumSelectList<LogisticaBroker.Models.Enums.DocumentType>()" required></select>
                        </div>

                        <div class="mb-3">
                            <label for="file" class="form-label fw-bold">Seleccionar Archivo</label>
                            <input type="file" name="file" class="form-control" required />
                            <div class="form-text">Formatos recomendados: PDF, JPG, PNG, XLSX.</div>
                        </div>

                        <div class="mb-3">
                            <label for="Notes" class="form-label">Notas Adicionales (Opcional)</label>
                            <textarea name="Notes" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload me-1"></i> Subir Ahora
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-success border-top border-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-bold text-success"><i class="bi bi-cash-stack me-2"></i>Liquidación de Gastos</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-4 text-center">
                        <div class="col-md-4">
                            <div class="bg-light p-3 rounded border">
                                <label class="small text-muted fw-bold">COSTO TOTAL (Facturas)</label>
                                <div class="fs-4 fw-bold text-dark">$ @costoTotal.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-light p-3 rounded border">
                                <label class="small text-muted fw-bold">TOTAL PAGADO (Comprobantes)</label>
                                <div class="fs-4 fw-bold text-success">$ @totalPagado.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 rounded border @(deudaPendiente <= 0 ? "border-success" : "border-danger")">
                                <label class="small fw-bold @(deudaPendiente <= 0 ? "text-success" : "text-danger")">DEUDA PENDIENTE</label>
                                <div class="fs-4 fw-bold text-danger">$ @deudaPendiente.ToString("N2")</div>
                                <span class="badge @deudaBadge">@estadoDeuda</span>
                            </div>
                        </div>
                    </div>

                    <ul class="nav nav-tabs nav-fill mb-3" id="liqTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active fw-bold" id="costs-tab" data-bs-toggle="tab" data-bs-target="#costs" type="button" role="tab">
                                <i class="bi bi-file-earmark-ruled me-1 text-danger"></i>Costos / Facturas (@Model.Costs.Count)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link fw-bold" id="payments-tab" data-bs-toggle="tab" data-bs-target="#payments" type="button" role="tab">
                                <i class="bi bi-receipt me-1 text-success"></i>Pagos / Comprobantes (@Model.Payments.Count)
                            </button>
                        </li>
                    </ul>
                    
                    <div class="tab-content" id="liqTabsContent">
                        <div class="tab-pane fade show active" id="costs" role="tabpanel">
                            <button type="button" class="btn btn-sm btn-danger mb-3" data-bs-toggle="modal" data-bs-target="#costModal">
                                <i class="bi bi-plus-circle me-1"></i> Registrar Costo/Factura
                            </button>
                            <div class="table-responsive">
                                <table class="table table-sm table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Concepto</th>
                                            <th>Monto Costo</th>
                                            <th>Vencimiento</th>
                                            <th>Factura Adjunta</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Costs != null && Model.Costs.Any())
                                        {
                                            @foreach (var cost in Model.Costs.OrderByDescending(p => p.CreatedAt))
                                            {
                                                <tr>
                                                    <td class="fw-bold">@Html.DisplayFor(m => cost.Concept)</td>
                                                    <td class="font-monospace">$ @cost.Amount.ToString("N2")</td>
                                                    <td>@(cost.DueDate?.ToLocalTime().ToString("dd/MM/yyyy") ?? "-")</td>
                                                    <td>
                                                        @if (cost.DocumentId.HasValue && cost.Document != null) {
                                                            <div class="btn-group btn-group-sm" role="group">
                                                                <a asp-controller="Documents" asp-action="Preview" asp-route-id="@cost.DocumentId" target="_blank" class="btn btn-outline-danger">
                                                                    <i class="bi bi-eye me-1"></i> @cost.Document.FileName
                                                                </a>
                                                                <a asp-controller="Documents" asp-action="Download" asp-route-id="@cost.DocumentId" class="btn btn-outline-danger">
                                                                    <i class="bi bi-download"></i>
                                                                </a>
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        } else {
                                            <tr><td colspan="4" class="text-center text-muted fst-italic py-3">No hay costos registrados.</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="payments" role="tabpanel">
                            <button type="button" class="btn btn-sm btn-success mb-3" data-bs-toggle="modal" data-bs-target="#paymentModal">
                                <i class="bi bi-plus-circle me-1"></i> Registrar Comprobante de Pago
                            </button>
                            <div class="table-responsive">
                                <table class="table table-sm table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Monto Pagado</th>
                                            <th>Fecha de Pago</th>
                                            <th>Notas</th>
                                            <th>Comprobante Adjunto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Payments != null && Model.Payments.Any())
                                        {
                                            @foreach (var pay in Model.Payments.OrderByDescending(p => p.PaidDate))
                                            {
                                                <tr>
                                                    <td class="fw-bold font-monospace">$ @pay.Amount.ToString("N2")</td>
                                                    <td>@pay.PaidDate.ToLocalTime().ToString("dd/MM/yyyy")</td>
                                                    <td class="small">@(pay.Notes ?? "-")</td>
                                                    <td>
                                                        @if (pay.DocumentId.HasValue && pay.Document != null) {
                                                            <div class="btn-group btn-group-sm" role="group">
                                                                <a asp-controller="Documents" asp-action="Preview" asp-route-id="@pay.DocumentId" target="_blank" class="btn btn-outline-success">
                                                                    <i class="bi bi-eye me-1"></i> @pay.Document.FileName
                                                                </a>
                                                                <a asp-controller="Documents" asp-action="Download" asp-route-id="@pay.DocumentId" class="btn btn-outline-success">
                                                                    <i class="bi bi-download"></i>
                                                                </a>
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        } else {
                                            <tr><td colspan="4" class="text-center text-muted fst-italic py-3">No hay pagos registrados.</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="costModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-file-earmark-ruled me-2"></i>Registrar Costo / Factura Pendiente</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form asp-controller="DispatchCosts" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="DispatchId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Concepto *</label>
                            <select name="Concept" class="form-select" asp-items="Html.GetEnumSelectList<PaymentType>()" required></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Monto del Costo (USD) *</label>
                            <input type="number" name="Amount" class="form-control" step="0.01" min="0.01" required placeholder="500.00" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fecha Vencimiento</label>
                            <input type="date" name="DueDate" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Factura / Documento Pendiente *</label>
                            <input type="file" name="facturaFile" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notas</label>
                            <textarea name="Notes" class="form-control" rows="2" placeholder="Ej: Factura N° F001-123"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Guardar Costo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="notifyClientModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="NotifyClientWithDocuments" method="post" onsubmit="selectAllSelectedDocs()">
                    <div class="modal-header bg-info">
                        <h5 class="modal-title"><i class="bi bi-send-fill me-2"></i>Notificar al Cliente</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="dispatchId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Mensaje Personalizado (Opcional)</label>
                            <textarea name="customMessage" class="form-control" rows="2" placeholder="Ej: Adjunto la factura y el BL actualizados..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                <label class="form-label fw-bold">Documentos Disponibles</label>
                                <select id="docsAvailable" multiple class="form-control" style="height: 200px;">
                                    @foreach (var doc in Model.Documents.OrderBy(d => d.FileName))
                                    {
                                        <option value="@doc.Id">@doc.FileName (@doc.DocType)</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-2 d-flex flex-column align-items-center justify-content-center gap-2">
                                <button type="button" class="btn btn-outline-primary w-100" onclick="moveDocs('docsAvailable', 'docsSelected')">&gt;&gt;</button>
                                <button type="button" class="btn btn-outline-secondary w-100" onclick="moveDocs('docsSelected', 'docsAvailable')">&lt;&lt;</button>
                            </div>

                            <div class="col-md-5">
                                <label class="form-label fw-bold">Documentos a Notificar</label>
                                <select id="docsSelected" name="selectedDocs" multiple class="form-control" style="height: 200px;"></select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-send-check-fill me-1"></i> Notificar Ahora
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    <script>
        // Función para mover ítems entre las dos listas
        function moveDocs(fromListId, toListId) {
            const fromList = document.getElementById(fromListId);
            const toList = document.getElementById(toListId);
            
            // Obtener todas las opciones seleccionadas
            const selectedOptions = Array.from(fromList.selectedOptions);
            
            selectedOptions.forEach(option => {
                toList.appendChild(option); // Moverla a la otra lista
            });
        }

        // Función para seleccionar TODO en la lista "Seleccionado" antes de enviar
        // (CRITERIO 4 - DADO QUE...)
        function selectAllSelectedDocs() {
            const selectedList = document.getElementById('docsSelected');
            Array.from(selectedList.options).forEach(option => {
                option.selected = true;
            });
            // Esto asegura que todos los IDs en la lista se envíen al controlador
            return true;
        }
    </script>
}
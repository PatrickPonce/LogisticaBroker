@using X.PagedList.Mvc.Core
@using X.PagedList
@model IPagedList<LogisticaBroker.Models.Client>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800 fw-bold">
            <i class="bi bi-people-fill me-2"></i>Gestión de Clientes
        </h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-person-plus-fill me-2"></i>Nuevo Cliente
        </a>
    </div>

    <div class="card shadow-sm mb-4 border-0 bg-light">
        <div class="card-body py-3">
            <form asp-action="Index" method="get" class="row g-3 align-items-center">
                <div class="col-md-6 col-lg-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" name="searchTerm" class="form-control border-start-0" 
                               placeholder="Buscar por empresa, RUC o email..." 
                               value="@ViewBag.CurrentSearch" />
                        <button type="submit" class="btn btn-dark">Buscar</button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
                {
                    <div class="col-auto">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Limpiar
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Empresa / RUC</th>
                            <th>Contacto Principal</th>
                            <th>Ubicación</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold text-primary">@item.CompanyName</div>
                                        <div class="small text-muted">
                                            <i class="bi bi-upc-scan me-1"></i>RUC: @item.RUC
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ContactPerson))
                                        {
                                            <div><i class="bi bi-person me-1 text-muted"></i>@item.ContactPerson</div>
                                        }
                                        <div class="small">
                                            <a href="mailto:@item.Email" class="text-decoration-none text-muted">
                                                <i class="bi bi-envelope me-1"></i>@item.Email
                                            </a>
                                        </div>
                                        @if (!string.IsNullOrEmpty(item.Phone))
                                        {
                                            <div class="small text-muted">
                                                <i class="bi bi-telephone me-1"></i>@item.Phone
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Address))
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt me-1"></i>@item.Address
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                    <td class="text-end pe-3">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border" title="Editar">
                                                <i class="bi bi-pencil-square text-warning"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border" title="Ver Detalles">
                                                <i class="bi bi-eye-fill text-info"></i>
                                            </a>
                                            </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-people fs-1 d-block mb-3 opacity-50"></i>
                                    No se encontraron clientes con ese criterio de búsqueda.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        @if (Model.PageCount > 1)
        {
            <div class="card-footer bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
                    </div>
                    <div>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchTerm = ViewBag.CurrentSearch }), 
                        new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            UlElementClasses = new string[] { "pagination pagination-sm mb-0" },
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always
                        })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@model LogisticaBroker.Models.Client

@{
    ViewData["Title"] = "Borrar Cliente";
}

<h1>Borrar Cliente</h1>

<h3>¿Estás seguro que deseas borrar este cliente?</h3>
<div class="alert alert-warning" role="alert">
    <strong>¡Advertencia!</strong> Esta acción no se puede deshacer y podría borrar también todos los despachos asociados si la configuración de base de datos lo permite.
</div>

<div>
    <h4>@Model.CompanyName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RUC)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RUC)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ContactPerson)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar Definitivamente" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
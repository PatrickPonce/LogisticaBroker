@model LogisticaBroker.Models.Dispatch
@using LogisticaBroker.Models.Enums
@{ 
    ViewData["Title"] = "Seguimiento " + Model.DispatchNumber;
    
    // LÓGICA PARA LA BARRA DE PROGRESO DINÁMICA
    var (progressPercentage, progressClass, progressLabel) = Model.Status switch
    {
        DispatchStatus.Pending => (10, "bg-secondary", "Inicio / Pendiente"),
        DispatchStatus.Documentation => (30, "bg-info text-dark", "Documentación"),
        DispatchStatus.InTransit => (50, "bg-primary", "En Tránsito"),
        DispatchStatus.Arrived => (70, "bg-primary", "Arribado a Puerto"),
        DispatchStatus.Customs => (85, "bg-warning text-dark", "En Trámite Aduanero"),
        DispatchStatus.Released => (95, "bg-success", "Liberado / Por Entregar"),
        DispatchStatus.Completed => (100, "bg-success", "¡Completado!"),
        _ => (0, "bg-danger", "Estado Desconocido")
    };
    // --- CÓDIGO CORREGIDO ---
    // (CRITERIO 3) CÁLCULO DE DEUDA REAL
    var costoTotal = Model.Costs?.Sum(c => c.Amount) ?? 0;      // Suma la nueva tabla de Costos
    var totalPagado = Model.Payments?.Sum(p => p.Amount) ?? 0;   // Suma la tabla de Pagos
    var deudaPendiente = costoTotal - totalPagado;
    var estadoDeuda = deudaPendiente <= 0 && costoTotal > 0 ? "Liquidado" : (costoTotal == 0 ? "Sin Costos" : "Pendiente");
    var deudaBadge = deudaPendiente <= 0 && costoTotal > 0 ? "bg-success" : (costoTotal == 0 ? "bg-secondary" : "bg-danger");
    // --- FIN DEL CÓDIGO CORREGIDO ---
}

<div class="container py-4">
    <a asp-action="Index" class="text-decoration-none mb-3 d-inline-block">
        <i class="bi bi-arrow-left me-1"></i> Volver a mis despachos
    </a>

    <div class="card shadow-lg border-primary border-top border-4 mb-5">
        <div class="card-body p-5 text-center">
            <h2 class="fw-bold text-primary">@Model.DispatchNumber</h2>
            <p class="lead text-muted mb-4">Estado Actual: <span class="badge bg-primary fs-6 align-middle ms-2">@Html.DisplayFor(model => model.Status)</span></p>
             
            <div class="progress" style="height: 35px; font-size: 0.9rem;">
                <div class="progress-bar progress-bar-striped progress-bar-animated @progressClass fw-bold" 
                    role="progressbar" 
                    style="width: @progressPercentage%; transition: width 1.5s ease-in-out;"
                    aria-valuenow="@progressPercentage" 
                    aria-valuemin="0" 
                    aria-valuemax="100">
                    @progressLabel (@progressPercentage%)
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <h4 class="mb-3 text-secondary"><i class="bi bi-clock-history me-2"></i>Bitácora de Eventos</h4>
            <div class="list-group shadow-sm">
                @foreach(var entry in Model.Timeline.OrderByDescending(t => t.ChangedAt))
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start p-3">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 text-primary">@Html.DisplayFor(m => entry.Status)</h5>
                            <small class="text-muted">@entry.ChangedAt.ToLocalTime().ToString("g")</small>
                        </div>
                        
                        <button class="btn btn-sm btn-link text-decoration-none ps-0 mt-2" 
                                onclick='showTimelineDetails(@Html.Raw(Json.Serialize(new {
                                    // SOLUCIÓN 2: Pasamos el estado en INGLÉS al JSON
                                    status = entry.Status.ToString(), 
                                    date = entry.ChangedAt.ToLocalTime().ToString("g"),
                                    notes = entry.Notes,
                                    changedBy = entry.ChangedBy?.FullName ?? "Sistema",
                                    documents = entry.Documents.Select(d => new { d.FileName, d.Id, d.DocType })
                                })))'>
                            <i class="bi bi-eye me-1"></i>Ver detalles y adjuntos
                        </button>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-6">
            <h4 class="mb-3 text-secondary"><i class="bi bi-folder2-open me-2"></i>Mis Documentos</h4>
            
            @if(Model.Documents != null && Model.Documents.Any()) 
            {
                <div class="list-group shadow-sm">
                    @foreach(var doc in Model.Documents.OrderByDescending(d => d.UploadedAt)) 
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <div>
                                <i class="bi bi-file-earmark-text text-primary me-2 fs-4 align-middle"></i>
                                <span class="fw-bold">@Html.DisplayFor(m => doc.DocType)</span>
                                <br>
                                <small class="text-muted" style="margin-left: 2.25rem;">@doc.FileName</small>
                            </div>

                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-controller="Documents" asp-action="Preview" asp-route-id="@doc.Id" target="_blank" class="btn btn-outline-primary" title="Previsualizar">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a asp-controller="Documents" asp-action="Download" asp-route-id="@doc.Id" class="btn btn-outline-secondary" title="Descargar">
                                    <i class="bi bi-download"></i>
                                </a>
                            </div>
                            </div>
                    }
                </div>
            } 
            else 
            {
                <div class="alert alert-light border text-center">
                    No hay documentos disponibles para descarga aún.
                </div>
            }
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-success border-top border-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-bold text-success"><i class="bi bi-cash-stack me-2"></i>Liquidación de Gastos</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-4 text-center">
                        <div class="col-md-4">
                            <div class="bg-light p-3 rounded border">
                                <label class="small text-muted fw-bold">COSTO TOTAL (Facturas)</label>
                                <div class="fs-4 fw-bold text-dark">$ @costoTotal.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-light p-3 rounded border">
                                <label class="small text-muted fw-bold">TOTAL PAGADO (Comprobantes)</label>
                                <div class="fs-4 fw-bold text-success">$ @totalPagado.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 rounded border @(deudaPendiente <= 0 ? "border-success" : "border-danger")">
                                <label class="small fw-bold @(deudaPendiente <= 0 ? "text-success" : "text-danger")">DEUDA PENDIENTE</label>
                                <div class="fs-4 fw-bold text-danger">$ @deudaPendiente.ToString("N2")</div>
                                <span class="badge @deudaBadge">@estadoDeuda</span>
                            </div>
                        </div>
                    </div>

                    <ul class="nav nav-tabs nav-fill mb-3" id="liqTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active fw-bold" id="costs-tab" data-bs-toggle="tab" data-bs-target="#costs" type="button" role="tab">
                                <i class="bi bi-file-earmark-ruled me-1 text-danger"></i>Costos / Facturas (@Model.Costs.Count)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link fw-bold" id="payments-tab" data-bs-toggle="tab" data-bs-target="#payments" type="button" role="tab">
                                <i class="bi bi-receipt me-1 text-success"></i>Pagos / Comprobantes (@Model.Payments.Count)
                            </button>
                        </li>
                    </ul>
                    
                    <div class="tab-content" id="liqTabsContent">
                        <div class="tab-pane fade show active" id="costs" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Concepto</th>
                                            <th>Monto Costo</th>
                                            <th>Vencimiento</th>
                                            <th>Factura Adjunta</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Costs != null && Model.Costs.Any())
                                        {
                                            @foreach (var cost in Model.Costs.OrderByDescending(p => p.CreatedAt))
                                            {
                                                <tr>
                                                    <td class="fw-bold">@Html.DisplayFor(m => cost.Concept)</td>
                                                    <td class="font-monospace">$ @cost.Amount.ToString("N2")</td>
                                                    <td>@(cost.DueDate?.ToLocalTime().ToString("dd/MM/yyyy") ?? "-")</td>
                                                    <td>
                                                        @if (cost.DocumentId.HasValue && cost.Document != null) {
                                                            <div class="btn-group btn-group-sm" role="group">
                                                                <a asp-controller="Documents" asp-action="Preview" asp-route-id="@cost.DocumentId" target="_blank" class="btn btn-outline-danger">
                                                                    <i class="bi bi-eye me-1"></i> Ver Factura
                                                                </a>
                                                                <a asp-controller="Documents" asp-action="Download" asp-route-id="@cost.DocumentId" class="btn btn-outline-secondary">
                                                                    <i class="bi bi-download"></i>
                                                                </a>
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        } else {
                                            <tr><td colspan="4" class="text-center text-muted fst-italic py-3">No hay costos registrados.</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="payments" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Monto Pagado</th>
                                            <th>Fecha de Pago</th>
                                            <th>Notas</th>
                                            <th>Comprobante Adjunto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Payments != null && Model.Payments.Any())
                                        {
                                            @foreach (var pay in Model.Payments.OrderByDescending(p => p.PaidDate))
                                            {
                                                <tr>
                                                    <td class="fw-bold font-monospace">$ @pay.Amount.ToString("N2")</td>
                                                    <td>@pay.PaidDate.ToLocalTime().ToString("dd/MM/yyyy")</td>
                                                    <td class="small">@(pay.Notes ?? "-")</td>
                                                    <td>
                                                        @if (pay.DocumentId.HasValue && pay.Document != null) {
                                                            <div class="btn-group btn-group-sm" role="group">
                                                                <a asp-controller="Documents" asp-action="Preview" asp-route-id="@pay.DocumentId" target="_blank" class="btn btn-outline-success">
                                                                    <i class="bi bi-eye me-1"></i> Ver Comprobante
                                                                </a>
                                                                <a asp-controller="Documents" asp-action="Download" asp-route-id="@pay.DocumentId" class="btn btn-outline-secondary">
                                                                    <i class="bi bi-download"></i>
                                                                </a>
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        } else {
                                            <tr><td colspan="4" class="text-center text-muted fst-italic py-3">No hay pagos registrados.</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="timelineModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-info-circle me-2"></i>Detalle del Movimiento
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 class="text-primary fw-bold mb-3" id="tmStatus">-</h4>
                
                <dl class="row mb-4">
                    <dt class="col-sm-4 text-muted">Fecha/Hora:</dt>
                    <dd class="col-sm-8 fw-bold" id="tmDate">-</dd>
                    
                    <dt class="col-sm-4 text-muted">Realizado por:</dt>
                    <dd class="col-sm-8" id="tmBy">-</dd>
                </dl>

                <div class="mb-4">
                    <h6 class="fw-bold text-secondary border-bottom pb-2"><i class="bi bi-card-text me-2"></i>Notas/Observaciones</h6>
                    <div class="bg-light p-3 rounded fst-italic text-muted" id="tmNotes">
                        Sin notas adicionales.
                    </div>
                </div>

                <div>
                    <h6 class="fw-bold text-secondary border-bottom pb-2"><i class="bi bi-paperclip me-2"></i>Documentos de Sustento</h6>
                    <ul class="list-group list-group-flush" id="tmDocs">
                        </ul>
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var timelineModal;
        document.addEventListener('DOMContentLoaded', function() {
             timelineModal = new bootstrap.Modal(document.getElementById('timelineModal'));
        });

        // FUNCIÓN ACTUALIZADA CON TRADUCTOR
        function showTimelineDetails(data) {
            
            // 1. Diccionario de traducción (INGLÉS -> ESPAÑOL)
            const statusTranslations = {
                "Pending": "Pendiente",
                "Documentation": "Documentación",
                "InTransit": "En Tránsito",
                "Arrived": "Arribado",
                "Customs": "En Aduana",
                "Released": "Liberado",
                "Completed": "Completado"
            };

            // 2. Usar la traducción o el valor original si no se encuentra
            var statusEnEspanol = statusTranslations[data.status] || data.status;

            // 3. Rellenar el modal con los datos traducidos
            document.getElementById('tmStatus').textContent = statusEnEspanol; 
            document.getElementById('tmDate').textContent = data.date;
            document.getElementById('tmBy').textContent = data.changedBy;
            document.getElementById('tmNotes').textContent = data.notes || "Sin notas adicionales.";

            var docsList = document.getElementById('tmDocs');
            docsList.innerHTML = ''; // Limpiar lista anterior

            if (data.documents && data.documents.length > 0) {
                data.documents.forEach(doc => {
                    var li = document.createElement('li');
                    li.className = 'list-group-item d-flex justify-content-between align-items-center px-0 py-2';
                    li.innerHTML = `
                        <div>
                            <i class="bi bi-file-earmark-text text-primary me-2"></i>
                            <span>${doc.fileName}</span>
                        </div>
                        <a href="/Documents/Download/${doc.id}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-download"></i>
                        </a>
                    `;
                    docsList.appendChild(li);
                });
            } else {
                docsList.innerHTML = '<li class="list-group-item text-muted fst-italic px-0 py-3">No hay documentos vinculados a este movimiento.</li>';
            }

            timelineModal.show();
        }
    </script>
}
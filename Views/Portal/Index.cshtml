@model IEnumerable<LogisticaBroker.Models.Dispatch>
@{ ViewData["Title"] = "Mi Portal"; }

<div class="container py-4">
    <h1 class="display-6 text-primary mb-4"><i class="bi bi-briefcase-fill me-3"></i>Mis Despachos</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            AÃºn no tienes despachos registrados en nuestro sistema.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                 var statusBadge = item.Status.ToString() switch {
                    "Completed" => "bg-success",
                    "Released" => "bg-info text-dark",
                    _ => "bg-primary"
                };
                <div class="col">
                    <div class="card h-100 shadow-sm hover-shadow transition">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title fw-bold text-dark">@item.DispatchNumber</h5>
                                <span class="badge @statusBadge">@item.Status</span>
                            </div>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-calendar-event me-1"></i>Llegada: @(item.ArrivalDate?.ToString("dd/MM/yyyy") ?? "Pendiente")
                            </p>
                            @if(!string.IsNullOrEmpty(item.BLNumber)) {
                                <p class="card-text small"><strong>BL:</strong> @item.BLNumber</p>
                            }
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">
                                Ver Seguimiento <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
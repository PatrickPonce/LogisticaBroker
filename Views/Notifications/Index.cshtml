@model IEnumerable<LogisticaBroker.Models.Notification>

@{
    ViewData["Title"] = "Mis Notificaciones";
}

<div class="container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="display-6 text-primary">
                <i class="bi bi-bell-fill me-3"></i>Centro de Notificaciones
            </h1>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center py-5 shadow-sm border">
            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
            <h4 class="text-muted">No tienes notificaciones</h4>
            <p class="text-muted">Te avisaremos cuando haya novedades importantes sobre tus despachos.</p>
        </div>
    }
    else
    {
        <div class="list-group shadow-sm">
            @foreach (var item in Model)
            {
                // Diferenciar visualmente leídas de no leídas
                var activeClass = !item.IsRead ? "bg-white border-start border-5 border-primary fw-bold" : "bg-light text-muted";
                var iconColor = !item.IsRead ? "text-primary" : "text-secondary opacity-50";

                <div class="list-group-item list-group-item-action p-4 @activeClass">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <div class="d-flex align-items-start gap-3">
                            <div class="mt-1">
                                <i class="bi bi-info-circle-fill fs-4 @iconColor"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">@item.Title</h5>
                                <p class="mb-2 @(!item.IsRead ? "text-dark" : "")">@item.Message</p>
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    @item.CreatedAt.ToLocalTime().ToString("f")
                                </small>
                            </div>
                        </div>
                        
                        @if (!item.IsRead || item.RelatedDispatchId.HasValue)
                        {
                            <a asp-action="ReadAndRedirect" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary ms-3 flex-shrink-0">
                                @if (!item.IsRead)
                                {
                                    <span><i class="bi bi-check2 me-1"></i>Marcar leída</span>
                                    if (item.RelatedDispatchId.HasValue) { <span> y Ver</span> }
                                }
                                else
                                {
                                    <span><i class="bi bi-eye me-1"></i>Ver detalles</span>
                                }
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>